<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/guardlogin"

    tools:context="br.edu.ifma.labmov.spotted.ListaOcorrencia"
    android:weightSum="1"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lista de Ocorrências "
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/listocorrencias"
        android:layout_width="wrap_content"
        android:layout_height="294dp"
        android:layout_weight="0.62" >


    </ListView>

    <Button
        android:id="@+id/btcadsocorrencia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="Cadastrar Ocorrência" />

</LinearLayout>
